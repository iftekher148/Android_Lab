<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:text=""
            android:textSize="70sp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnac"
                android:text="C"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnroot"
                android:text="ROOT"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnsquer"
                android:text="^"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnadd"
                android:text="+"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnsub"
                android:text="-"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn4"
                android:text="4"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnmul"
                android:text="X"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btndiv"
                android:text="/"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btndot"
                android:text="."
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnequal"
                android:text="="
                android:textSize="25dp"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnmod"
                android:text="%"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>